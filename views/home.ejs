<script>
    // JavaScript code
var currentSlide = 1;
var totalSlides = 3;

function showSlide(slideNumber) {
    var slides = document.getElementsByClassName('banner');
    var i;

    for (i = 0; i < slides.length; i++) {
        slides[i].style.display = 'none';
    }

    slides[slideNumber - 1].style.display = 'block';
}

function previousSlide() {
    if (currentSlide === 1) {
        currentSlide = totalSlides;
    } else {
        currentSlide--;
    }

    showSlide(currentSlide);
}

function nextSlide() {
    if (currentSlide === totalSlides) {
        currentSlide = 1;
    } else {
        currentSlide++;
    }

    showSlide(currentSlide);
}

function startSlider() {
    setInterval(function() {
        nextSlide();
    }, 3000); // Change slide every 3 seconds (adjust as needed)
}

// Show the first slide initially
showSlide(currentSlide);

// Start the automatic slider
startSlider();


function changeReview(elem){
    if(elem=='review1'){
        document.getElementById("review1").style.display="block";
        document.getElementById("line1").style.border="solid white 2px";
        document.getElementById("review2").style.display="none";
        document.getElementById("line2").style.border="solid darkgray 2px";
        document.getElementById("review3").style.display="none";
        document.getElementById("line3").style.border="solid darkgray 2px";
    }
    else if(elem=='review2'){
        document.getElementById("review1").style.display="none";
        document.getElementById("line1").style.border="solid darkgray 2px";
        document.getElementById("review2").style.display="block";
        document.getElementById("line2").style.border="solid white 2px";
        document.getElementById("review3").style.display="none";
        document.getElementById("line3").style.border="solid darkgray 2px";
    }
    else{
        document.getElementById("review1").style.display="none";
        document.getElementById("line1").style.border="solid darkgray 2px";
        document.getElementById("review2").style.display="none";
        document.getElementById("line2").style.border="solid darkgray 2px";
        document.getElementById("review3").style.display="block";
        document.getElementById("line3").style.border="solid white 2px";
    }
}

</script>



